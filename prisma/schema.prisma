

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]

  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Role {
  id        String     @id @default(uuid())
  name      String  @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  @@map("roles")
}
model EmailLog {
  id            String    @id @default(uuid())
  user          User?     @relation(fields: [user_id], references: [id])
  user_id       String?   
  to            String   
  subject       String    
  body          String   
  status        String    @default("pending")  // pending | success | failed
  type          String     // verify | reset_password | ...
  error_message String?   
  created_at    DateTime  @default(now()) 
  updated_at    DateTime  @updatedAt

  @@map("email_logs")
}
model Notification {
  id          String    @id @default(uuid())
  user        User      @relation(fields: [user_id], references: [id])
  user_id     String    
  title       String    
  content     String   
  type        String       // info | warning | success | error
  is_read     Boolean   @default(false) 
  action_url  String?   
  created_at  DateTime  @default(now()) 
  updated_at  DateTime  @updatedAt

  @@map("notifications")
}

model User {
  id                      String      @id @default(uuid())
  email                   String   @unique
  password                String
  created_at              DateTime @default(now())
  updated_at              DateTime @updatedAt
  phone                   String?
  username                   String?
  images                   String?
  role_id                   String?
  role                    String? @default("user") // user | admin | super_admin
  token                   Token[]
  points     Int           @default(0)
  short_code    String         @unique
  percentage   Float?  @default(0.1)        // Phần trăm phí của người dùng
  pointUsages  PointUsage[]
  emailLogs      EmailLog[]
  notifications  Notification[]
  list_ads_account String[] @default([]) // Danh sách ID tài khoản quảng cáo

  @@map("users")
}
model Transaction {
  id          String       @id @default(uuid())
  short_code      String @unique
  user_id  String
  amountVND   Int       // Số tiền VNĐ nạp vào
  points      Int       // Điểm tương ứng nhận được
  bank        String 
  description        String 
  transactionID        Int
  type        String
  date        String
  status     String @default("pending")
  error_message  String?
   
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  @@map("transactions")
}
model PointUsage {
  id              String    @id @default(uuid())
  user            User      @relation(fields: [user_id], references: [id])
  user_id          String
  points_used      Int       // Số điểm đã sử dụng
  service_type     String    @default("ads_account")// Loại dịch vụ, ví dụ: "facebook_ads", "tiktok_ads", "premium_package"
  target_account   String    // Mã tài khoản quảng cáo hoặc ID mục tiêu
  description     String?   // Mô tả thêm (nếu cần)
  status          String    @default("success") // success | failed | pending
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt

  @@map("point_usages")
}
model Token {
  id          String      @id @default(uuid())
  user_id     String      @unique
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  access_token  String @default("")
  refresh_token  String @default("")
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("tokens")
}
model FacebookPartnerBM {
  id          String      @id @default(uuid())
  bm_id       String  
  bm_origin String?
  bot_id           String?
  ads_account_id String 
  user_id       String
  status        String
  status_partner        Int?
  status_limit_spend        Int?
  status_dischard_limit_spend        Int?
  status_dischard_partner      Int?
  message      String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("facebook_partner_bm")
}
model FacebookBM {
  id          String      @id @default(uuid())
  bm_name     String
  bm_id     String      @unique
  list_ads_account     String[] @default([])
  system_user_token String 
  status        String?   @default("success")
  status_id        Int?   @default(1)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("facebook_bm")
}
model Cookies {
  id          String      @id @default(uuid())
  email       String   @unique
  storage_state  Json
  in_use      Boolean? @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("cookies")
}
model Policies {
  id          String      @id @default(uuid())
  title       String   
  message     String

  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("policies")
}
